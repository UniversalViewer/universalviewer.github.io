---
const locale = Astro.currentLocale;
const currentPath = Astro.url.pathname;
const urlPrefix = locale === 'en' ? '' : `/${locale}`;
const href = (p: string) => `${urlPrefix}${p}`;
---

<header class="site-header">
  <a
    href={href('')}
    class="logo-link"
  >
    <img
      src=""
      alt=""
      class="logo-image"
    />
  </a>
  <nav class="main-nav">
    <ul class="main-nav-list">
      <li class="main-nav-list-item">
        <a
          href={href('')}
          class="main-nav-link"
          >Home</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/demo')}
          class="main-nav-link"
          >Demo</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/events')}
          class="main-nav-link"
          >Events</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/docs')}
          class="main-nav-link"
          >Documentation</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/blog')}
          class="main-nav-link"
          >Blog</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/community')}
          class="main-nav-link"
          >Community</a
        >
      </li>
    </ul>
  </nav>
  <div class="languages-container">
    <button
      type="button"
      id="showLanguagesButton"
      class="show-languages-button"
      aria-label="Select language"
      aria-expanded="false"
      >Language</button
    >
    <nav
      id="langNav"
      class="lang-nav"
    >
      <ul class="lang-nav-list">
        <li class="lang-nav-list-item">
          <a
            href={href(currentPath)}
            class="lang-nav-link"
            >en</a
          >
        </li>
        <li class="lang-nav-list-item">
          <a
            href={href(`/cy${currentPath}`)}
            class="lang-nav-link"
            >cy</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>
<script>
  const langButton = document.getElementById('showLanguagesButton');
  const langNav = document.getElementById('langNav');
  langButton?.addEventListener('click', () => {
    langNav?.classList.toggle('show');
  });
</script>
