---
const locale = Astro.currentLocale;
const urlPrefix = locale === 'en' ? '' : `/${locale}`;
const href = (p: string) => `${urlPrefix}${p}`;
const currentPath = Astro.url.pathname;
---

{currentPath}
<header class="site-header">
  <a
    href={href('')}
    class="logo-link"
  >
    <img
      src=""
      alt=""
      class="logo-image"
    />
  </a>
  <nav class="main-nav">
    <ul class="main-nav-list">
      <li class="main-nav-list-item">
        <a
          href={href('')}
          class="main-nav-link"
          >Home</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/demo')}
          class="main-nav-link"
          >Demo</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/events')}
          class="main-nav-link"
          >Events</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/docs')}
          class="main-nav-link"
          >Documentation</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/blog')}
          class="main-nav-link"
          >Blog</a
        >
      </li>
      <li class="main-nav-list-item">
        <a
          href={href('/community')}
          class="main-nav-link"
          >Community</a
        >
      </li>
    </ul>
  </nav>
  <nav>
    <ul>
      <li>
        <a href={href(currentPath)}>en</a>
      </li>
      <li>
        <a href={href(`/cy${currentPath}`)}>cy</a>
      </li>
    </ul>
  </nav>
</header>
