---
import BaseLayout from "@layouts/BaseLayout.astro";
import * as collection from "./demo_collection.json";
const pageTitle = "Demo";
const groups = collection.collections
    .filter((g: any) => g.visible !== false)
    .map((g: any) => ({
        label: g.label,
        manifests: (g.manifests ?? []).filter((m: any) => m.visible !== false),
    }))
    .filter((g: any) => g.manifests.length > 0);
---

<BaseLayout pageTitle={pageTitle} mainClass="demo-main">
    <fragment slot="head">
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/universalviewer@latest/dist/uv.css"
        />
        <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/universalviewer@latest/dist/umd/UV.js"
        ></script>
    </fragment>

    <div id="demo-layout">
        <div id="uv" class="uv"></div>

        <div id="controls">
            <div class="controls-section" id="content-control">
                <h3>Content</h3>
                <select id="manifest-select">
                    {
                        groups.map((group) => (
                            <optgroup label={group.label}>
                                {group.manifests.map((m: any) => (
                                    <option value={m["@id"]}>{m.label}</option>
                                ))}
                            </optgroup>
                        ))
                    }
                </select>
                <h3>Load IIIF Manifest</h3>
                <div class="url-input">
                    <input
                        type="text"
                        id="manifest-input"
                        placeholder="Input URLâ€¦"
                    />
                    <button id="load-btn">Load</button>
                </div>
            </div>

            <div class="controls-section" id="customise">
                <h3>Customise</h3>
                <div class="checkbox-grid">
                    <label
                        ><input type="checkbox" id="cfg-leftPanel" checked /> Left
                        panel</label
                    >
                    <label
                        ><input type="checkbox" id="cfg-rightPanel" checked /> Right
                        panel</label
                    >
                    <label
                        ><input type="checkbox" id="cfg-footerPanel" checked /> Footer
                        panel</label
                    >
                    <label
                        ><input type="checkbox" id="cfg-headerPanel" checked /> Header
                        panel</label
                    >
                    <label
                        ><input
                            type="checkbox"
                            id="cfg-showHomeControl"
                            checked
                        /> Home button</label
                    >
                    <label
                        ><input
                            type="checkbox"
                            id="cfg-showAdjustImageControl"
                            checked
                        /> Adjust image button</label
                    >
                    <label
                        ><input
                            type="checkbox"
                            id="cfg-navigatorEnabled"
                            checked
                        /> Navigator</label
                    >
                </div>
            </div>

            <div class="controls-section" id="advanced">
                <h3>Advanced Demo</h3>
                <p>
                    Developers may want to see the <a
                        href="https://universalviewer.dev">bleeding edge demo</a
                    > or the <a href="https://uv-v4.netlify.app"
                        >latest stable demo</a
                    >, which include more advanced controls for configuring and
                    testing the viewer.
                </p>
            </div>
        </div>
    </div>

    <script is:inline>
        document.addEventListener("DOMContentLoaded", () => {
            const select = document.getElementById("manifest-select");
            const manifestInput = document.getElementById("manifest-input");
            const loadButton = document.getElementById("load-btn");

            let uv = null;
            let currentManifestId = select.options[0]?.value ?? null;

            function buildConfig() {
                return {
                    options: {
                        leftPanelEnabled:
                            document.getElementById("cfg-leftPanel").checked,
                        rightPanelEnabled:
                            document.getElementById("cfg-rightPanel").checked,
                        footerPanelEnabled:
                            document.getElementById("cfg-footerPanel").checked,
                        headerPanelEnabled:
                            document.getElementById("cfg-headerPanel").checked,
                        navigatorEnabled: document.getElementById(
                            "cfg-navigatorEnabled",
                        ).checked,
                    },
                    modules: {
                        openSeadragonCenterPanel: {
                            options: {
                                showHomeControl: document.getElementById(
                                    "cfg-showHomeControl",
                                ).checked,
                                showAdjustImageControl: document.getElementById(
                                    "cfg-showAdjustImageControl",
                                ).checked,
                            },
                        },
                    },
                };
            }

            function loadManifest(manifestId) {
                if (!manifestId) return;
                currentManifestId = manifestId;

                if (uv) {
                    try {
                        uv.dispose();
                    } catch {}
                    uv = null;
                }

                const urlAdapter = new UV.IIIFURLAdapter();
                const data = urlAdapter.getInitialData({
                    iiifManifestId: manifestId,
                });
                uv = UV.init("uv", data);
                urlAdapter.bindTo(uv);

                uv.on("configure", ({ config, cb }) => {
                    cb(buildConfig());
                });
            }

            // load first manifest on page load
            loadManifest(currentManifestId);

            select.addEventListener("change", () => {
                loadManifest(select.value);
            });

            loadButton.addEventListener("click", () => {
                const url = manifestInput.value.trim();
                if (url) loadManifest(url);
            });

            manifestInput.addEventListener("keydown", (e) => {
                if (e.key === "Enter") loadButton.click();
            });

            [
                "cfg-leftPanel",
                "cfg-rightPanel",
                "cfg-footerPanel",
                "cfg-headerPanel",
                "cfg-navigatorEnabled",
                "cfg-showHomeControl",
                "cfg-showAdjustImageControl",
            ].forEach((id) => {
                document
                    .getElementById(id)
                    .addEventListener("change", () =>
                        loadManifest(currentManifestId),
                    );
            });
        });
    </script>
</BaseLayout>
