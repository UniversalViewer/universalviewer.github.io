<Debug prev={postUrl(prev)} />
<Debug prev={postUrl(next)} /> -->
<BaseLayout pageTitle={post.data.title}>
    <h1>{post.data.title}</h1>
    <Content />
    
  <nav class="post-nav" style="display:flex;gap:3em;justify-content:space-between">
    {
        prev && (
            <div class="prev-post">  
                <strong>Previous post</strong>
                <br />
                <a href={postUrl(prev)}>{prev.data.title}</a>
            </div>
        )
    }
    
    {
        next && (
            <div class="next-post">
                <strong>Next post</strong>
                <br />
                <a href={postUrl(next)}>{next.data.title}</a>
            </div>
        )
    }
  </nav>
</BaseLayout>